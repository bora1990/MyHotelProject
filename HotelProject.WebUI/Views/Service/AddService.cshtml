@model CreateServiceDto

@{
    ViewData["Title"] = "AddService";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form method="post">

    <label asp-for="ServiceIcon">Hizmet Ikonu</label>
    <input type="text" asp-for="ServiceIcon" class="form-control" />
    <span asp-validation-for="ServiceIcon" class="text-danger"></span>
    <br />
    <label asp-for="Title">Hizmet Başlığı</label>
    <input type="text" asp-for="Title" class="form-control" />
    <span asp-validation-for="Title" class="text-danger"></span>
    <br />
    <label asp-for="Description">Açıklama</label>
    <input type="text" asp-for="Description" class="form-control" />  

    <br />
    <button class="btn btn-primary">Hizmeti Ekle</button>


</form>

